<h2>edit</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :氏名 %><br>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %><br>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %><br>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %><br>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  

  <!--<div class="field">-->
  <!--  <#%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />-->
  <!--  <#%= f.password_field :password, autocomplete: "new-password" %>-->
  <!--  <#% if @minimum_password_length %>-->
  <!--    <br />-->
  <!--    <em><#%= @minimum_password_length %> characters minimum</em>-->
  <!--  <#% end %>-->
  <!--</div>-->

  <!--<div class="field">-->
  <!--  <#%= f.label :password_confirmation %><br />-->
  <!--  <#%= f.password_field :password_confirmation, autocomplete: "new-password" %>-->
  <!--</div>-->

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions"><br>
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>

