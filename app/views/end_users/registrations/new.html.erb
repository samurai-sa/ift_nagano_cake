<div class="text-center">
  <h2>新規登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "end_users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :姓 %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :姓（カナ） %><br />
      <%= f.text_field :last_name_kana, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :名（カナ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :telephone_number, autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>　文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="actions"><br >
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <%= render "end_users/shared/links" %>

</div>
